
<%= render partial: "form" %>

<%= form_with model: @category, method: :patch, local: true do |f| %>
  <div class="card category-card pt-3 pb-5">
    <p>カテゴリー名：<%= f.text_field :name ,size: 50, class: "category-submit"%></p>
  </div>
  <div>  
    <%= f.submit "更新", class:"category-button btn-block"%>
  </div>
<% end %>

<%# 削除ボタン%>
<div class="category-delete">
  <center>
    <%= link_to "このカテゴリーを削除する" ,category_path(@category), class: "btn-block btn-sm btn-sm mr-1 text-light",data: { confirm: '本当に削除しますか?' } ,method: :delete%>
  </center>
</div>