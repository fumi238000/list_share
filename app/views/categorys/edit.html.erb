<%= render partial: "form" %>

<section id="category-form">
  <div class="title">
    <p>カテゴリー名</p>
  </div>

  <%# form%>
  <%= form_with model: @category, method: :patch, local: true do |f| %>
    <p><%= f.text_field :name ,size: 50, class: "submit"%></p>
    <section id="category-btn">
      <%= f.submit "更新", class:"btnn float-purple"%>
    </section> 
  <% end %>
</section>

<section id="category-btn">
  <%= link_to category_path(@category), method: :delete do %>
    <button class="btnn float-red">カテゴリーを削除</button> 
  <% end %>
</section>