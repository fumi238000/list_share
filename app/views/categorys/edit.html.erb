<%= render "form"%>

<div class="card category-form">
  <%= form_with model: @category,local: true do |f| %>
    <p class="pt-3">カテゴリー名：<%= f.text_field :name ,size: 50, class: "category-submit"%></p>
    <%= f.submit "更新", class:"category-button btn-block"%>
  <% end %>
</div>

<%# 削除ボタン%>
<div class="category-delete">
  <center>
    <%= link_to "このカテゴリーを削除する" ,category_path(@category), class: "btn-block btn-sm btn-sm mr-1 text-light",data: { confirm: '本当に削除しますか?' } ,method: :delete%>
  </center>
</div>


