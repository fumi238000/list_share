<%= render "form", button_value: "更新する"%>

<%= form_with model: @category, local: true do |f| %>
  <div class="card category-card pt-3 pb-5">
    <p class="pt-3">カテゴリー名：<%= f.text_field :name, size: 50%></p>
  </div>
  <div>
    <%= f.submit "更新" , class:"btn-block category-button"%>
  </div>
<% end %>

<%# 削除ボタン%>
<div class="category-delete">
  <center>
    <%= link_to "このカテゴリーを削除する" ,category_path(@category), class: "btn-block btn-sm btn-sm mr-1 text-light",data: { confirm: '本当に削除しますか?' } ,method: :delete%>
  </center>
</div>