<%= render "form" %>

<section id="category-form">
  <div class="title">
    <p>カテゴリー名</p>
  </div>

  <%= form_with model: @category, url: "/categorys", method: :post, local: true do |f| %>
    <%= f.hidden_field :category, value: @category %>
    <p><%= f.text_field :name ,size: 50, class: "submit"%></p>

     <section id="category-btn">
      <%= f.submit "新規作成", class:"btnn float-purple"%>
    </section>

  <% end %>

</section>