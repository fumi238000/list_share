<h1>カテゴリー</h1>

<div class="new-category-link">
   <%# 追加ボタン %>
    <%= link_to new_category_path, :method => :get do %> 
      <span>カテゴリーを追加</span><i class="fas fa-plus-circle"></i>
    <% end %>
</div>


  

<div id="tasks-list">
  <div data-controller="drag" data-drag-url = "/categorys/id/move">
    <% @categorys.each do |c| %>

        <div class="card" data-id="<%= c.id%>">
          <section class="card__drag">
            <div class="card__content">

              <div class="card__left__content">
                <%# グリッド%>
                <span class="glid">
                  <i class="grid fas fa-grip-lines-vertical"></i>
                </span>
                <%# カテゴリー名%>
                <span class="name">
                  <%= link_to tasks_path do%>
                    <%= c.name %>
                  <% end %>
                </span>
              </div>

              <div class="card__right__content">
                <%# 共有ボタン %>
                <span class="share">
                  <%= link_to participation_path(c.id),class: "shara", :method => :get do %>
                   <i class="fas fa-link"></i>
                  <% end %>
                </span>

                <%# 編集ボタン %>
                <span>
                  <%= link_to edit_category_path(c),class:"edit",  :method => :get do %>
                    <i class="fas fa-pen"></i>
                  <% end %>          
                </span>
             </div>

           </div>
         </section>
        </div>
 
    <% end %>
  </div>
</div> 