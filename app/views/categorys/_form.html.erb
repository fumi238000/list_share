<section class="form-top">
  <div class= "page__back">
    <%= link_to "キャンセル", categorys_path, class:"back__style"%>
  </div>
  <div class="title">
    <p><%= @category.name %></p>
  </div>
  <div class="space"></div>
</section>

<%= render 'layouts/error_form',  model: @category %>

<section class="form">
  <div class="form__title">
    <p>カテゴリー名</p>
  </div>
    
  <% binding.pry %>  
  <%= form_with model: @category do |f| %>    
    <%= f.hidden_field :category, value: @category %>
    <p><%= f.text_field :name ,size: 50, class: "form__submit"%></p>
    <section id="category-btn">
      <%= f.submit button_value, class:"btnn float-purple"%>
    </section>
  <% end %>
</section>


