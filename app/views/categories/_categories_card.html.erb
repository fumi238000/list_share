<div class="card" data-id="<%= category.id%>">   
  <section class="card__drag">

    <div class="card__content">
      <!-- left_content -->
      <div class="card__left__content">
        <%# グリッド%>
        <span class="glid">
          <i class="grid fas fa-grip-lines-vertical"></i>
        </span>
        <%# カテゴリー名%>
        <span class="name">
          <%= link_to tasks_path do%>
            <%= category.name %>
          <% end %>
        </span>
      </div>
 
      <!-- right_content -->
      <div class="card__right__content">
        <%# 共有ボタン %>
        <span class="share">
          <%= link_to participation_path(category.id),class: "shara", :method => :get do %>
           <i class="fas fa-link"></i>
          <% end %>
        </span>
        <%# 編集ボタン %>
        <span>
          <%= link_to edit_category_path(category),class:"edit",  :method => :get do %>
            <i class="fas fa-pen"></i>
          <% end %>          
        </span>
      </div>
    </div>

  </section>
</div>
