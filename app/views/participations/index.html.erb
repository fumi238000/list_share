<h1>参加者一覧</h1>

<div class="text-right">
   <%# 追加ボタン %>
    <%= link_to new_participation_path, class: "btn text-primary btn-sm btn-sm mr-1", :method => :get do %> 
      <span class="mr-2">共有者を追加</span><i class="fas fa-plus-circle"></i>
    <% end %>
</div>
  
  <ul>
    <% @participations.each do |p| %>
    
    <li class="card mb-3">
    <div>
      <%# ナンバー %>
      <span class="pr-3">No.<%= p.id %></span>
      <%# 参加者id %>
      <span class="pr-3">参加者ID: <%= p.participation_id %></span>

       <%# 削除ボタン%>
       <span class="text-rihgt">
         <span>
           <%= link_to participation_path(p), class: "bg-danger text-light",data: { confirm: '本当に削除しますか?' } ,:method => :delete do%>
             <i class="fas fa-trash"></i> 
           <% end %>
         </span>
      </div>
      </span>

      </li>
    <% end %>
  </ul>