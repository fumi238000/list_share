<section class="form__index">
  <div class= "back"><%= link_to "キャンセル", tasks_path%></div>
  <div class="link">
    <%= link_to new_comment_path(task_id: @task_id), class:"link__color",:method => :get do %> 
      <span>コメントを追加</span><i class="fas fa-plus-circle"></i>
    <% end %>
  </div>
</section>
<p class="task__name">【<%= @task.name %>】</p>

<% if @comments.empty? %>
  <div class="card p-3 text-center">
    <p>登録されているコメントはありません</p>
  </div>

<% else %>

  <%# コメントカード %>
  
  <div class="p-3">
    <% @comments.each do |c| %>
      <% if c.task_id == @task_id %>

        <div class="card comment-bg">
          
          <div>

            <%# 日付%> 
            <div class="float-left ml-2 mt-2 ">
              <span>作成日時：<%= c.created_at.to_s(:datetime_jp) %><span>
            </div>
            <%# 編集ボタン%>
            <div class ="float-right">
              <%= link_to edit_comment_path(c), class: "btn-sm  mr-1 mt-1 text-light d-inline-block w-50 " ,method: :get do %>
                <div class="fas fa-pen icon-style"></div>
              <% end %>
            </div>

          </div>
        
          <%# コメント%>
          <p class="mt-3 pl-2 px-4 mb-3" ><%= c.content %></p>
        
          <%# 削除ボタン%>
          <div  class="text-right pb-2">
            <%= link_to comment_path(c), class: " btn-sm btn-sm mr-1 text-light", data: { confirm: '本当に削除しますか?' } ,:method => :delete do%>
              <i class="far fa-trash-alt icon-style"></i> 
            <% end %> 
          </div>
        
        </div>

      <% end %>
    <% end %>
  </div>

<% end %>