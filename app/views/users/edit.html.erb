<h1>画像編集</h1>

<div class="text-left ml-3">
  <span>
    <%= link_to "戻る", user_path(@user), class: 'text-dark'%>
  </span>
</div>

<%= form_with model: @user, local: true do |f| %>
  <%= f.hidden_field :user, value: @user %>
  <p><%= f.file_field :image, accept: "image/png,image/jpeg,image/gif" ,class: "btn btn-primary btn-block " %></p>
    
    <section id="user-btn">
      <%= f.submit "送信", class:"btnn float-purple"%>
    </section>
<% end %>


<% if @user.image? %>
  <section id="user-btn">
    <%= link_to "画像の初期化", user_path, class:"btnn float-purple", method: :delete, data: { confirm: "デフォルトに戻しますか？" } %> 
  </section>

<% end %>